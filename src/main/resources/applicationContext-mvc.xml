<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:mvc="http://www.springframework.org/schema/mvc"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
							http://www.springframework.org/schema/context
							http://www.springframework.org/schema/context/spring-context-4.0.xsd
							http://www.springframework.org/schema/mvc
							http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd"
	   default-lazy-init="true">

	<context:component-scan base-package="com.hyaroma.controller" />
	<!-- location:资源所在的文件夹， mapping：请求的url格式  不被拦截器处理-->
	<mvc:resources location="/css/" mapping="/css/**"/>
	<mvc:resources location="/js/" mapping="/js/**"/>
	<!-- 开启注解支持-->
	<mvc:annotation-driven />
	<mvc:default-servlet-handler></mvc:default-servlet-handler>

	<!-- 配置SpringMVC的拦截器 -->
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<mvc:exclude-mapping path="/login.html" />
			<bean class="com.hyaroma.interceptor.TokenInterceptor" />
		</mvc:interceptor>
	</mvc:interceptors>
	<!-- 配置视图解析器 -->
	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix">
			<value>/</value>
		</property>
		<property name="suffix">
			<value>.jsp</value>
		</property>
	</bean>

	<!-- 配置消息转换器，用于JSON数据的转换 -->
	<bean id="messageConverter" class="com.alibaba.fastjson.support.spring.FastJsonHttpMessageConverter">
		<property name="supportedMediaTypes">
			<list>
				<value>application/json; charset=UTF-8</value>
				<value>text/html; charset=UTF-8</value>
			</list>
		</property>
	</bean>

	<!-- 配置多部件解析器，用于文件的上传 -->
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<!-- 配置编码为UTF-8 -->
		<property name="defaultEncoding" value="UTF-8" />
		<property name="maxUploadSize" value="2000000000" />
	</bean>

</beans>